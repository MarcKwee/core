{
  "name": "restapir",
  "version": "1.0.0",
  "description": "RestAPI business storage",
  "main": "restapir.js",
  "scripts": {
    "test": "sh shutdown.sh && sh startup.sh && mocha -b -t 5s test/*.js && xo && sh shutdown.sh",
    "watch": "node watch.js",
    "coverage": "sh shutdown.sh && sh startup.sh && istanbul cover node_modules/.bin/_mocha -- -u exports -R spec -t 5s test/* && sh shutdown.sh"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mauritsl/bluegate.git"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "xo": {
    "esnext": true,
    "space": 2,
    "rules": {
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "max-params": [
        "error",
        5
      ],
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ]
    }
  },
  "keywords": [
    "rest",
    "storage"
  ],
  "author": "Maurits Lawende",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.4.1",
    "bluegate": "^1.1.17",
    "dicer": "^0.2.5",
    "fs-extra": "^0.30.0",
    "globby": "^6.0.0",
    "graphql": "^0.7.2",
    "http-errors": "^1.5.0",
    "is-my-json-valid": "^2.15.0",
    "js-yaml": "^3.6.1",
    "jsonpath": "^0.2.7",
    "lodash": "^4.13.1",
    "rc": "^1.1.6",
    "redis": "^2.6.2",
    "rethinkdb": "^2.3.3"
  },
  "devDependencies": {
    "chai": "^2.3.0",
    "chai-as-promised": "^5.0.0",
    "chalk": "^1.1.3",
    "eslint": "^3.8.1",
    "faker": "^3.1.0",
    "mocha": "^2.2.4",
    "mocha-lcov-reporter": "0.0.2",
    "needle": "^0.9.2",
    "watch": "^1.0.1",
    "xo": "^0.17.0"
  }
}
